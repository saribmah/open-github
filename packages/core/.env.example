# Sandbox Configuration
SANDBOX_PROVIDER=docker
DOCKER_IMAGE=open-github-sandbox:latest
DOCKER_NETWORK=open-github-network
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=1
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SANDBOXES=10

# GitHub Configuration
GITHUB_TOKEN=
GITHUB_API_URL=https://api.github.com

# Daytona Configuration (if using)
DAYTONA_API_URL=
DAYTONA_API_KEY=
DAYTONA_WORKSPACE_CLASS=small
DAYTONA_PROXY_DOMAIN=       # Optional: Custom proxy domain (e.g., proxy.yourdomain.com)

# Server Configuration
PORT=3001
HOST=0.0.0.0
ALLOWED_ORIGINS=http://localhost:5173,https://open-github.com
